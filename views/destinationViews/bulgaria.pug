extends ../shared/_master

block body
    section.section-background
    .container
        h2.page-header 
        |
        section.section-wrapper
            div
                // Nav tabs
                ul.nav.nav-tabs(role='tablist')
                    each city, index in citiesBulgaria
                        - var link = "#" + city.name
                        if index == 0
                            li.active(role='presentation')
                                a(href=link, aria-controls=city.name, role='tab', data-toggle='tab') 
                                    =city.name
                        else
                            li(role='presentation')
                                a(href=link, aria-controls=city.name, role='tab', data-toggle='tab') 
                                    =city.name
                    //- li.active(role='presentation')
                    //-     a(href='#home', aria-controls='home', role='tab', data-toggle='tab') Home
                    //- li(role='presentation')
