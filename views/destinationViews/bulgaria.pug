                    //- li(role='presentation')
                    //-     a(href='#settings', aria-controls='settings', role='tab', data-toggle='tab') Settings
                // Tab panes
                .tab-content
                    each city, index in citiesBulgaria
                        if index == 0
                            .tab-pane.active.fade.in(id=city.name, role='tabpannel')
                                .currentCity.jumbotron
                                    h1#cityName
                                        =city.name
                                    hr
                                    p
