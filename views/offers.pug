extend shared/_master

block body
    section.section-background
    .container#offers-container
        h2.page-header 
        |
        section.section-wrapper#main-heading
            .row.offersList
                each offer in context
                    .col-md-4.col-sm-6
                        .media.offer
                            #destination
                                h3#city=offer.city
                                h4#country
                                    |(
                                    =offer.country
                                    |)
                            #price=offer.price + ' â‚¬'
                            #duration=offer.duration
                            #startDate  Starts at: 
                                =offer.date
                            button(type="button" class="btn btn-primary") SIGN ME UP
                else
                    h1 No current Offers.
                        a(href='/createofferts') Are you a member? Add one!