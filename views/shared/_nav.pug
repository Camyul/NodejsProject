mixin nav
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/', title='HOME')
                    i.ion-paper-airplane
                    |  shared 
                    span travel
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/') Home
                    if user
                        li
                            a(href='/contact') contact
                        li
                            a(href='/about') about
                        li
                            a(href='/offers') offers
                        li
                            a(href='/destinations') all destinations
                        li
                            a(href='/profile')#user
                                .glyphicon.glyphicon-user                    
                                =user.username
                        li
                            a(href="/auth/sign-out")#signout
                                | Sign out
                    else
                        li
                            a(href='/contact') contact
                        li
                            a(href='/about') about
                        li
                            a(href='/offers') offers
                        li
                            a(href='/destinations') all destinations
                        li
                            a(href='/auth/sign-up')
                                | Sign up
                        li
                            a(href='/auth/sign-in')
                                | Sign in